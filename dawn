#!/usr/bin/env sh
## @file dawn
## Queries sunrise-sunset.org for sunrise time and returns result as local time.
## @author Ralf Quast
## @date 2021
## @copyright GPL
set -e

LAT=${1}
LNG=${2}

curl -m 60 -s "http://api.sunrise-sunset.org/json?lat=${LAT}&lng=${LNG}" | python -c "import sys, json; from datetime import *; from dateutil import tz; import pytz;  print(datetime.strftime(datetime.strptime(json.load(sys.stdin)['results']['sunrise'], '%I:%M:%S %p').replace(tzinfo=pytz.UTC).astimezone(tz.tzlocal()), '%H:%M:%S'))"
